@model IEnumerable<WorldOfMerchants.Models.Item>

@{
    ViewBag.Title = "My Items";
}

<h2>My Items</h2>

<table class="table table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rarity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Value)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Points)
        </th>
        <th>
            Picture
        </th>
        <th>
            Sell
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rarity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Points)
            </td>
            <td>
                <img src="~/Images/@item.PicUrl" height="100" width="100" />
            </td>
            <td>
                @Html.ActionLink("Sell Item", "SellItem", new { id = item.ID })
            </td>
        </tr>
    }

</table>

<h2>My Credits</h2><br />
@ViewBag.Credits
<br />
<h2>My Game Score</h2><br />
@ViewBag.Score

